{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "100%-stacked seat share by party (percentage only).",
  "width": 800,
  "height": 380,
  "background": "white",
  "data": { "url": "../data/seats.csv", "format": { "type": "csv" } },
  "transform": [
    { "joinaggregate": [{ "op": "sum", "field": "Seats", "as": "totalSeats" }], "groupby": ["Year"] },
    { "calculate": "datum.totalSeats > 0 ? datum.Seats / datum.totalSeats : 0", "as": "pct" }
  ],
  "mark": { "type": "bar" },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Election year",
      "sort": "ascending",
      "scale": { "paddingInner": 0.6, "paddingOuter": 0.3 }
    },
    "y": {
      "field": "pct",
      "type": "quantitative",
      "stack": "normalize",
      "axis": { "title": "Seat share (%)", "format": ".0%" }
    },
    "color": {
      "field": "Party",
      "type": "nominal",
      "title": "Party",
      "sort": ["ALP", "Coalition"],
      "scale": { "domain": ["ALP", "Coalition"], "range": ["#d32f2f", "#1976d2"] }
    },
    "tooltip": [
      { "field": "Year", "type": "ordinal" },
      { "field": "Party", "type": "nominal" },
      { "field": "Seats", "type": "quantitative", "title": "Seats" },
      { "field": "pct", "type": "quantitative", "title": "Seat share", "format": ".0%" }
    ]
  },
  "config": {
    "view": { "stroke": null },
    "axis": { "labelFontSize": 11, "titleFontSize": 12 },
    "legend": {
      "titleFontSize": 12,
      "labelFontSize": 11,
      "orient": "right",
      "direction": "vertical"
    }
  }
}
